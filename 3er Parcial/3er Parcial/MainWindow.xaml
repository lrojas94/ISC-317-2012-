<Window x:Class="_3er_Parcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3er_Parcial"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Personajes">
                <Frame x:Name="charactersFrame" Content="To be Replaced by Characters" Margin="0,0,0,0" ClipToBounds="True" Background="#FFFF"/>
            </TabItem>
            <TabItem Header="Enemies" >
                <Frame x:Name="enemiesFrame" Content="To be replaced by EnemiesPage" Margin="0,0,0,0" ClipToBounds="True" Background="#FFFF"/>
            </TabItem>
	        <TabItem Header="Can Marry">
                <Frame x:Name="canmarryFrame" Content="To be replaced by CanMarry" ClipToBounds="True" Background="#FFEE8383" Margin="0,0,0,0"/>
            </TabItem>
            <TabItem Header="Heredero">
                <Frame x:Name="herederoFrame" Content="To be replaced by Heredero" ClipToBounds="True" Background="#FFEE8383" Margin="0,0,0,0"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
