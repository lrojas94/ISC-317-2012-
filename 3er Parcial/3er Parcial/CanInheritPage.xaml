<Page x:Class="_3er_Parcial.CanInheritPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
	Title="CanInheritPage">

    <Grid Background="#FFECF0F1">
        <ComboBox x:Name="housesCB" Height="32" Margin="10,40,10,0" VerticalAlignment="Top" SelectionChanged="housesCB_SelectionChanged" VerticalContentAlignment="Center"/>
        <Label x:Name="title" Content="Herederos" Height="34" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontFamily="Lato Thin" FontSize="18" BorderThickness="0,0,0,5" BorderBrush="#f1c40f" Background="#2c3e50" Foreground="White"/>
        <Image x:Name="houseImage"  Margin="10,77,10,5"  Stretch="UniformToFill" Source="Images/none.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Rectangle Fill="#7F000000" Height="{Binding ElementName=houseImage, Path=ActualHeight}" Margin="10,77,10,5" VerticalAlignment="Top" StrokeThickness="0"/>
        <Label x:Name="inheritorName" Content="Inheritor" Margin="0,80,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" Foreground="White" FontFamily="Jaapokki subtract" FontSize="40"/>


    </Grid>
</Page>
